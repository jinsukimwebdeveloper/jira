@model Jira.Views.Dto.IssueListModel

@using (Html.BeginForm())
{
  <!-- 이슈 등록 Modal -->
    <div class="modal fade" id="register" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">신규 이슈 등록</h4>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="form-group">
                            <label class="control-label col-md-2">제목</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <form class="form-horizontal" role="form">
                            <div class="form-group">
                                <label class="control-label col-md-2">중요도</label>
                                <div class="col-md-3">
                                    <select id="modal_priority" class="form-control">
                                        <option>Critical</option>
                                        <option>Major</option>
                                        <option>Minor</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">Fix Ver.</label>
                                    <div class="col-md-3">
                                        <input id="modal_fixversion" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </form>
                        <form class="form-horizontal" role="form">
                            <div class="form-group">
                                <label class="control-label col-md-2">담당자</label>
                                <div class="col-md-3">
                                    <select id="modal_owner" class="form-control">
                                        <option>김진수</option>
                                        <option>이태헌</option>
                                        <option>김진아</option>
                                    </select>
                                </div>
                                <label class="control-label col-md-2">소요기간</label>
                                <div class="col-md-3">
                                    <select id="modal_estimate" class="form-control">
                                        <option>1MD</option>
                                        <option>2MD</option>
                                        <option>3MD</option>
                                        <option>4MD</option>
                                        <option>5MD</option>
                                    </select>
                                </div>
                            </div>
                        </form>
                        <form class="form-horizontal" role="form">
                            <div class="form-group">
                                <label class="control-label col-md-2">내용</label>
                                <div class="col-md-10">
                                    <textarea id="modal_description" class="form-control" rows="10"></textarea>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">취소</button>
                    <button type="button" class="btn btn-primary">등록</button>
                </div>
            </div>
        </div>
    </div>
}