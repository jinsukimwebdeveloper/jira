@model Jira.Views.Dto.IssueListModel

@{
    ViewBag.Title = "이슈 등록";
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<h2>이슈 등록</h2>
<hr />

<div class="container">
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label class="control-label col-md-2">제목</label>
            <div class="col-md-4">
                <input class="form-control">
            </div>
        </div>
    </form>
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label class="control-label col-md-2">중요도</label>
            <div class="col-md-2">
                <select class="form-control">
                    <option>Critical</option>
                    <option>Major</option>
                    <option>Minor</option>
                </select>
            </div>
        </div>
    </form>
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label class="control-label col-md-2">Fix Version</label>
            <div class="col-md-2">
                <input class="form-control">
            </div>
        </div>
    </form>
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label class="control-label col-md-2">담당자</label>
            <div class="col-md-2">
                <input class="form-control">
            </div>
            <input class="btn btn-default" type="button" value="담당자 찾기">
        </div>
    </form>
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label class="control-label col-md-2">내용</label>
            <div class="col-md-8">
                <textarea class="form-control" rows="10"></textarea>
            </div>
        </div>
    </form>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
